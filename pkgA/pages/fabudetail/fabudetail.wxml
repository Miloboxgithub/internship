          <view class="photos" wx:if="{{zixunImageUrl7}}" bind:tap="{{zixunImageUrl8?'':'chooseImagezixun'}}" data-index='8'>
            <image class="photosimg" src="{{zixunImageUrl8 || '/img/相机.png'}}" mode="aspectFill" />
