            <image src="/img/yess.png" wx:if="{{zixunImageUrl8}}" class="yes-button"></image>
          </view>
          <view class="photos" wx:if="{{zixunImageUrl8}}" bind:tap="{{zixunImageUrl9?'':'chooseImagezixun'}}" data-index='9'>
            <image class="photosimg" src="{{zixunImageUrl9 || '/img/相机.png'}}" mode="aspectFill" />
            <image src="/img/cha.png" wx:if="{{zixunImageUrl9}}" bindtap="removeZixun" data-index='9' class="delete-button"></image>
            <image src="/img/yess.png" wx:if="{{zixunImageUrl9}}" class="yes-button"></image>
          </view></view>
      </view>
    </view>
    <view style="  width: 80vw; margin-left: 5vw; border-bottom: 1px solid rgba(229, 229, 229, 1);">
      <view class="sitess">
        <view class="tou">备注</view>
        <textarea auto-height class="tst"  maxlength="200"  type="text" bindinput="inputed" data-name="memo" value="{{memo}}" placeholder="请填写备注信息"/>
