    <view class="tables">
      <view style="  width: 80vw; margin-left: 5vw; border-bottom: 1px solid rgba(229, 229, 229, 1);">
      <view class="sites">
        <view class="tou">公司<text style="color: rgba(255, 0, 0, 1);">*</text></view>
        <textarea auto-height class="tst" bindinput="inputed" data-name="companyName"  type="text" value="{{companyName}}" placeholder="请填写公司简称"/>
      </view>
    </view>
    <view style="  width: 80vw; margin-left: 5vw; border-bottom: 1px solid rgba(229, 229, 229, 1);">
      <view class="sitess" bindtap="changetypest1">
        <view class="tou">行业<text style="color: rgba(255, 0, 0, 1);">*</text></view>
        <view class="you" >{{hangs.op}}<image src="/img/you.png" mode=""/></view>
      </view>
    </view>
    <view style="  width: 80vw; margin-left: 5vw; border-bottom: 1px solid rgba(229, 229, 229, 1);">
      <view class="sitess" bindtap="changetypest2">
        <view class="tou">公司性质<text style="color: rgba(255, 0, 0, 1);">*</text></view>
        <view class="you" >{{xin.op}}<image src="/img/you.png" mode=""/></view>
      </view>
    </view>
    <view style="  width: 80vw; margin-left: 5vw; border-bottom: 1px solid rgba(229, 229, 229, 1);">
      <view class="sitess">
        <view class="tou">招聘岗位<text style="color: rgba(255, 0, 0, 1);">*</text></view>
        <textarea auto-height class="tst" bindinput="inputed" data-name="position" type="text" value="{{position}}" placeholder="请填写招聘岗位"/>
      </view>
    </view>
    <view style="  width: 80vw; margin-left: 5vw; border-bottom: 1px solid rgba(229, 229, 229, 1);">
      <view class="sitess">
        <view class="tou">实习类型<text style="color: rgba(255, 0, 0, 1);">*</text></view>
        <view class="tansview">
            <view class="{{types0?'yous':'zuo'}}" bind:tap="changetypes">线下</view>
            <view class="{{types0?'zuo':'yous'}}" bind:tap="changetypes">远程</view>
        </view>
      </view>
    </view>
