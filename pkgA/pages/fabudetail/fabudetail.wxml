        <view class="you">{{location}}<image src="/img/you.png" mode=""/></view>
      </view>
    </view>
    <view style="  width: 80vw; margin-left: 5vw; border-bottom: 1px solid rgba(229, 229, 229, 1);">
      <view class="sitesss">
        <view class="tou">岗位职责<text style="color: rgba(255, 0, 0, 1);">*</text></view>
        <textarea auto-height class="tsts"  maxlength="650"  bindinput="inputed" data-name="description" type="text" value="{{description}}" placeholder="请填写岗位职责"/>
      </view>
    </view>
    <view style="  width: 80vw; margin-left: 5vw; border-bottom: 1px solid rgba(229, 229, 229, 1);">
      <view class="sitesss">
        <view class="tou">岗位要求<text style="color: rgba(255, 0, 0, 1);">*</text></view>
        <textarea auto-height class="tsts"  maxlength="650"  bindinput="inputed" data-name="requirements" type="text" value="{{requirements}}" placeholder="请填写岗位要求"/>
      </view>
    </view>
    <view style="  width: 80vw; margin-left: 5vw; border-bottom: 1px solid rgba(229, 229, 229, 1);">
      <view class="sitesss">
        <view class="tou">实习收获<text style="color: rgba(255, 0, 0, 1);">*</text></view>
        <textarea auto-height class="tsts" maxlength="350"  type="text"  bindinput="inputed" data-name="acquisitions" value="{{acquisitions}}"  placeholder="请填写实习收获"/>
