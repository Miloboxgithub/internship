            <image src="/img/cha.png" wx:if="{{zixunImageUrl3}}" bindtap="removeZixun" data-index='3' class="delete-button"></image>
            <image src="/img/yess.png" wx:if="{{zixunImageUrl3}}" class="yes-button"></image>
