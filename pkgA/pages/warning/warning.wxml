    </view>
  </view>
  <view class="calls">
    <view class="syl">联系方式：</view>
    <view style="display: flex; justify-content: center;"><input class="inin" type="text" placeholder="请填写邮箱或手机号，以便您接受反馈结果" /></view>
    <view style="display: flex; justify-content: center;">
