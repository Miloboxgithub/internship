.scroll-view {
  display: flex;
  white-space: nowrap;
  overflow-x: auto;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  box-shadow: 0 -1px 10px rgba(0,0,0,0.1);
}

.tab-item {
  display: inline-block;
  padding: 10px 20px;
  color: #666;
  font-size: 14px;
  border-bottom: 2px solid transparent;
}

.tab-item[data-id="{{activeTabId}}"] {
  color: #333;
  border-bottom-color: #007aff;
}