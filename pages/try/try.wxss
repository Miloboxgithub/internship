/* pages/index/index.wxss */
.container {
  display: flex;
  justify-content: space-between; /* 盒子之间的间距平均分布 */
}

.box {
  flex: 1; /* 每个盒子占据相同的空间 */
  height: 100px; /* 盒子的高度，根据需要调整 */
  background-color: #f0f0f0; /* 盒子的背景颜色，可以根据需要调整 */
  text-align: center; /* 文字居中 */
  line-height: 100px; /* 使文字垂直居中 */
}